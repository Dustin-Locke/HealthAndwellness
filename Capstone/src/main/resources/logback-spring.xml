<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- =========================
         Console output for development
         ========================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- =========================
         File appender for reminder emails
         ========================= -->
    <appender name="REMINDER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/reminders.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/reminders.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for reminder email events -->
    <logger name="REMINDER_EMAIL" level="INFO" additivity="false">
        <appender-ref ref="REMINDER_FILE"/>
    </logger>

    <!-- =========================
         File appender for auth emails
         ========================= -->
    <appender name="AUTH_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/auth.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/auth.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for auth email events -->
    <logger name="AUTH_EMAIL" level="INFO" additivity="false">
        <appender-ref ref="AUTH_FILE"/>
    </logger>

    <!-- =========================
         Scheduler / ReminderJob logger
         ========================= -->
    <logger name="edu.fscj.cen4940.capstone.scheduler" level="INFO" additivity="false">
        <appender-ref ref="REMINDER_FILE"/>
    </logger>

    <!-- =========================
         Root logger (console)
         ========================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
